{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"] // ✅ Include your types folder
  },
  "include": ["src", "types"] // ✅ Make TS check both folders
}
